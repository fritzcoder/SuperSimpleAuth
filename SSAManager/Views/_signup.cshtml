@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<SSAManager.SignupModel>
      
@if(@Model.Errors != null)
{
<ul>
@foreach(var e in @Model.Errors){
    <li>
    @foreach(var member in e.MemberNames){
        @e.GetMessage(member);
    }
    </li>
}
</ul>
}
<div style="width: 300px;">
<form class="form-signin" action="/signup" method="post">
        <input type="email" name="Email" class="form-control" placeholder="Email address" required autofocus />
        <input type="password" name="Secret" class="form-control" placeholder="Password" required />
        <input type="password"  name="ConfirmSecret" class="form-control" placeholder="Confirm Password" required />
        <button class="btn btn-lg btn-primary btn-block" name="Signup" type="submit">Sign Up</button>
</form>
</div>
    