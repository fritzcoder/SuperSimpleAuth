@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<SSAManager.ClaimModel>
@{
  Layout = "_layout.cshtml";
}   
<h4>Create a claim in application <a href="~/app/@Model.App.Name">@Model.App.Name</a>:</h4>
<p>
Claims (or actions), can be used to determine what can be perfomed by a user or role. 
Examples: "Read", "Write"
</p>

@if(@Model.Errors != null)
{
<div class="alert alert-danger">
    <ul>
    @foreach(var e in @Model.Errors){
        <li>
        @foreach(var member in e.MemberNames){
            @e.GetMessage(member);
        }
        </li>
    }
    </ul>
</div>
}
<form action="/app/@Model.App.Name/claim/new" method="post">
    <div>
        <label for="Name">Name:</label>
        <input type="text" name="Name" required autofocus />
    </div>
    <br />
    <input class="btn btn-success" type="submit" name="Create" value="Create" />
    <a class="btn" href="/app/@Model.App.Name">Cancel</a>
</form>
    