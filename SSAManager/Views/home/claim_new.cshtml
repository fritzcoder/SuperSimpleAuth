@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<SSAManager.Claim>
@{
  Layout = "_layout.cshtml";
}   
<h1>Create a Claim</h1>
<p>
Claims (or actions), can be used to determine what can be perfomed by a user or role. 
Examples: "Read", "Write"
</p>

@if(@Model.Errors != null)
{
    <ul>
    @foreach(var e in @Model.Errors){
        <li>
        @foreach(var member in e.MemberNames){
            @e.GetMessage(member);
        }
        </li>
    }
    </ul>
}

<form action="/app/@Model.AppName/claim/new" method="post">
    <label for="Name">Name:</label>
    <input type="text" name="Name" />
    <input type="submit" name="Create" value="Create" />
</form>
    