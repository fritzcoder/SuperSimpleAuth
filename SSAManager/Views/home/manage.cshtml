@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<SSAManager.ManageModel>
@{
  Layout = "_layout.cshtml";
}   

<h4>Applications <a href="~/app/new"><small><span class="glyphicon glyphicon-plus-sign"></span> New</small></a></h4>
<div>      
@if(@Model.Apps != null && @Model.Apps.Length > 0)
{
    foreach(var app in @Model.Apps)
    {
        <div style="border: 1px solid black;background:#ffffff;padding:5px;">
            <div>
            <h4><a href="~/app/@app.Name">@app.Name</a></h4>
            </div>
            <div>
            Created: @app.CreatedAt.ToLongDateString() @app.CreatedAt.ToLongTimeString()
            </div>
        </div>
        <br />
    }
}
else
{
    <p>No applications have been created. Click new to create an application.</p>
}
</div>