@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<SSAManager.CreateRoleModel>
@{
  Layout = "_layout.cshtml";
}   
<h4>Create a role in domain <a href="~/domain/@Model.Domain.Name">@Model.Domain.Name</a>:</h4>

@if(@Model.Errors != null && @Model.Errors.Count > 0)
{
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <ul>
    @foreach(var e in @Model.Errors){
        <li>
        @e.Message
        </li>
    }
    </ul>
    </div>
}

<form action="~/domain/@Model.Domain.Name/role/new" method="post">
    <p>
        <label for="Name">Name:</label>
        <input type="text" name="Name" required autofocus />
    </p>
    <input type="submit" class="btn btn-success" name="Create" value="Create" />
    <a class="btn btn-default" href="~/domain/@Model.Domain.Name">Cancel</a>
</form>