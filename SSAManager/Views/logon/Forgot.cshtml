@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<SSAManager.ForgotPasswordModel>
@{
  Layout = "_layout.cshtml";
}

<div style="width: 325px;margin-left: auto;margin-right: auto ;">
    <h2>Forgot your password?</h2>
    <form class="form-signin" action="/forgot" method="post">
        <input type="text" name="Email" class="form-control" placeholder="your@email.com" style="margin:5px;" required />
		<br />
        <button class="btn btn-lg btn-primary btn-block" name="new" style="margin:5px;" type="submit">New Password</button>
    </form>
	<div style="text-align: center;padding:10px;">
        <a href="/" class="btn btn-default" role="button">Sign up</a>
		<a href="~/logon" class="btn btn-default" role="button">Sign in</a>
	</div>
</div>

