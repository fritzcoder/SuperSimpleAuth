@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<SSAManager.LogonModel>
@{
  Layout = "_layout.cshtml";
}

<div style="width: 325px;margin-left: auto;margin-right: auto ;">
    <h2><i class="fa fa-sign-in" aria-hidden="true"></i> Sign In</h2>
    <form class="form-signin" action="/logon" method="post">
        <input type="text" name="Username" class="form-control" placeholder="Email address" style="margin:5px;" required autofocus />
        <input type="password" name="Secret" class="form-control" placeholder="Password" style="margin:5px;" required />
		<br />
        <button class="btn btn-lg btn-primary btn-block" name="Logon" style="margin:5px;" type="submit">Sign In</button>
    </form>
	<div style="text-align: center;padding:10px;">
        <a href="/" class="btn btn-default" role="button">Sign up</a>
		<a href="~/forgot" class="btn btn-default" role="button">Forgot?</a>
	</div>
</div>
