@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Simple. Secure. Web Authentication and Authorization." />
    <meta name="author" content="Fritz" />
    <title>Super Simple Auth (SSA) -  Beta</title>
	<script src="//use.fontawesome.com/713af367b4.js"></script>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/content/css/ss.css" />
</head>
<body style="padding-top:60px;padding-bottom:60px;">		
<!-- Fixed navbar -->
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
        <a class="navbar-brand" href="/home">
            <i class="fa fa-shield" aria-hidden="true">
            </i> SuperSimpleAuth <small>BETA</small>
        </a>
        </div>
        <ul class="nav navbar-nav navbar-right">
			@if(@Model.Manager != null)
            {
            <li role="presentation"><a href="/home">Home</a></li>
            <li role="presentation"><a href="/settings">@Model.Manager.UserName</a></li>
            <li role="presentation"><a href="/logoff">Sign Out</a></li>
            }
        </ul>
    </div>
</nav>
<!-- Begin page content -->
<div class="container">
<div style="border: 1px solid; background-color: #f2f2f2;box-shadow: 5px 5px 5px #888888;-moz-border-radius: 10px; -webkit-border-radius: 10px;border-radius: 10px;padding:10px;">
@if(@Model.Messages != null && @Model.Messages.Count > 0)
{
    <div class="alert alert-success alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <ul>
    @foreach(var message in @Model.Messages){
        <li>
        @message
        </li>
    }
    </ul>
    </div>
}

@if(@Model.Errors != null && @Model.Errors.Count > 0)
{
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <ul>
    @foreach(var e in @Model.Errors){
        <li>
        @e.Message
        </li>
    }
    </ul>
    </div>
}
@RenderBody()
</div>
</div>
<footer>
    <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
	    <div class="container">
    		<div class="navbar-header">
            <a class="navbar-brand" href="/home">
                <i class="fa fa-shield" aria-hidden="true">
                </i> SuperSimpleAuth <small>BETA</small>
           </a>
           </div>
            <ul class="nav navbar-nav navbar-left">
                <li role="presentation"><a href="#">Github</a></li>
                <li role="presentation"><a href="#">Wiki</a></li>
                <li role="presentation"><a href="#">API SDKs</a></li>
            </ul>
	    </div>
     </nav>
</footer>
<!-- Bootstrap core JavaScript
================================================== -->
<script src="//codeorigin.jquery.com/jquery-2.0.3.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="/content/javascript/ssa.js"></script>
<!-- Placed at the end of the document so the pages load faster -->
</body>
</html>
