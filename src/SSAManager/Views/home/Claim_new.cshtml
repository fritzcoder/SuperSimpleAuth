@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<SuperSimple.Auth.Manager.ClaimModel>
@{
  Layout = "_layout.cshtml";
}   
<div style="width: 325px;margin-left: auto;margin-right: auto ;">
<h2><i class="fa fa-lock" aria-hidden="true"></i> Create a claim</h2>
<p>
Claims (or actions), can be used to determine what can be perfomed by a user or role. 
Examples: "Read", "Write"
</p>
<form action="/domain/@Model.Domain.Id/claim/new" method="post">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" name="Name" class="form-control" placeholder="New claim in domain: @Model.Domain.Name" required autofocus />
    </div>
    <input class="btn btn-success" type="submit" name="Create" value="Create" />
    <a class="btn btn-default" href="/domain/@Model.Domain.Id">Cancel</a>
</form>
<br />
<br />
</div>
    